<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">

    <changeSet id="1" author="henry">
        <createTable tableName="client-test">
            <column name="id" type="INTEGER">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="full_name" type="VARCHAR(255)"/>
            <column name="short_name" type="VARCHAR(255)"/>
            <column name="third_party_it" type="VARCHAR(255)"/>
        </createTable>
    </changeSet>

    <changeSet id="2" author="henry">
        <createTable tableName="client_worker-test">
            <column name="id" type="INTEGER">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="email" type="VARCHAR(255)"/>
            <column name="first_name" type="VARCHAR(255)"/>
            <column name="last_name" type="VARCHAR(255)"/>
            <column name="phone_number" type="VARCHAR(255)"/>
            <column name="title" type="VARCHAR(255)"/>
            <column name="client_id" type="INTEGER"/>
        </createTable>
        <addForeignKeyConstraint baseTableName="client_worker"
                                 baseColumnNames="client_id"
                                 referencedTableName="client"
                                 referencedColumnNames="id"
                                 constraintName="client_worker_client_id_fk"/>
    </changeSet>
</databaseChangeLog>
